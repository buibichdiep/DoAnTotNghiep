﻿@{
    ViewData["Title"] = "Home Page";
    var codeIATA = ViewBag.CodeIATA as List<CityCodeIATA> ?? new List<CityCodeIATA>();
    var listCateHotel = ViewBag.ListCateHotel as List<CategoryHotel> ?? new List<CategoryHotel>();
    var listCateTour = ViewBag.ListCateTour as List<CategoryTour> ?? new List<CategoryTour>();
}

<div class="wrapper">
    <!--Slide-->
    <div class="slide-show">
        <div class="list-images">
            <img class="imgs" src="./images/slide1.jpg" alt="">
            <img class="imgs" src="./images/slide2.jpg" alt="">
            <img class="imgs" src="./images/slide3.jpg" alt="">
            <img class="imgs" src="./images/slide4.jpg" alt="">
        </div>
        <div class="arrow">
            <div class="arrow-left btns"><i class="fa-solid fa-chevron-left"></i></div>
            <div class="arrow-right btns"><i class="fa-solid fa-chevron-right"></i></div>
        </div>
        <div class="index-images">
            <div class="index-item index-item-0 active"></div>
            <div class="index-item index-item-1"></div>
            <div class="index-item index-item-2"></div>
            <div class="index-item index-item-3"></div>
        </div>
    </div>
    <!--Filter search-->
    <div class="filter-search-index">
        <div class="wrapper-filter-index">
            <div class="filter-menu-index">
                <ul class="list-menu-index">
                    <li class="menu-item-index" id="itemIndex1" onclick="showContainer(1)">Vé máy bay</li>
                    <li class="menu-item-index" id="itemIndex2" onclick="showContainer(2)">Khách sạn</li>
                    <li class="menu-item-index" id="itemIndex3" onclick="showContainer(3)">Tour du lịch</li>
                </ul>
            </div>
            <div class="filter-content-index">
                <div id="containerIndex1" class="container-index active">
                    <div class="filter-air-1">
                        <div class="content-left">
                            <div class="content-left-1">
                                <div class="departure-point" onclick="toggleSelector('departureSelector')">
                                    <div class="icon"><i class="fa-solid fa-plane-departure"></i></div>
                                    <div class="text">
                                        <div class="text1">Điểm đi</div>
                                        <div class="swaptext1" id="swaptext1">Chọn địa điểm</div>
                                    </div>
                                </div>
                                <div class="swap" id="swap-air"><i class="fa-solid fa-right-left"></i></div>
                                <div class="arrival-point" onclick="toggleSelector('arrivalSelector')">
                                    <div class="icon"><i class="fa-solid fa-plane-arrival"></i></div>
                                    <div class="text">
                                        <div class="text1">Điểm đến</div>
                                        <div class="swaptext2" id="swaptext2">Chọn địa điểm</div>
                                    </div>
                                </div>

                                <!-- Bảng chọn địa điểm cho điểm đi -->
                                <div class="location-selector" id="departureSelector">
                                    <div class="location-selector-title">Chọn điểm đi</div>
                                    <div class="location-selector-content">
                                        <div class="location-categories">
                                            <div class="location-category" onclick="showOptions('departure', 'vietnam')">Việt Nam</div>
                                            <div class="location-category" onclick="showOptions('departure', 'asean')">Đông Nam Á</div>
                                            <div class="location-category" onclick="showOptions('departure', 'asia')">Châu Á</div>
                                            <div class="location-category" onclick="showOptions('departure', 'europe')">Châu Âu</div>
                                            <div class="location-category" onclick="showOptions('departure', 'oceania')">Châu Úc</div>
                                            <div class="location-category" onclick="showOptions('departure', 'americas')">Châu Mỹ</div>
                                        </div>
                                        <div class="location-options show" id="departure-vietnam">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "VN")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext1', 'departureSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="departure-asean">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "DNA")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext1', 'departureSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="departure-asia">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CA")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext1', 'departureSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="departure-europe">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CAU")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext1', 'departureSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="departure-oceania">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CU")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext1', 'departureSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="departure-americas">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CM")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext1', 'departureSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <!-- Thêm các nhóm tùy chọn cho các khu vực khác -->
                                    </div>
                                </div>

                                <!-- Bảng chọn địa điểm cho điểm đến -->
                                <div class="location-selector" id="arrivalSelector">
                                    <div class="location-selector-title">Chọn điểm đi</div>
                                    <div class="location-selector-content">
                                        <div class="location-categories">
                                            <div class="location-category" onclick="showOptions('arrival', 'vietnam')">Việt Nam</div>
                                            <div class="location-category" onclick="showOptions('arrival', 'asean')">Đông Nam Á</div>
                                            <div class="location-category" onclick="showOptions('arrival', 'asia')">Châu Á</div>
                                            <div class="location-category" onclick="showOptions('arrival', 'europe')">Châu Âu</div>
                                            <div class="location-category" onclick="showOptions('arrival', 'oceania')">Châu Úc</div>
                                            <div class="location-category" onclick="showOptions('arrival', 'americas')">Châu Mỹ</div>
                                        </div>
                                        <div class="location-options show" id="arrival-vietnam">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "VN")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext2', 'arrivalSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="arrival-asean">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "DNA")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext2', 'arrivalSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="arrival-asia">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CA")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext2', 'arrivalSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="arrival-europe">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CAU")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext2', 'arrivalSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="arrival-oceania">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CU")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext2', 'arrivalSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                        <div class="location-options" id="arrival-americas">
                                            @foreach (var city in codeIATA.FirstOrDefault(c => c.CodeIATA == "CM")!.CityCodeIATAChildren)
                                            {
                                                <div class="option" data-code="@city.CodeIATA" onclick="selectOption('swaptext2', 'arrivalSelector')">@city.CityName (@city.CodeIATA)</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="content-left-2">
                                <div class="picker-container" id="departureDatePicker">
                                    <i class="fa-solid fa-calendar-days"></i>
                                    <div class="picker-content">
                                        <div class="picker-name">Ngày Đi</div>
                                        <span id="departureDateText">Chọn ngày</span>
                                    </div>
                                </div>

                                <div class="picker-container" id="returnDatePicker">
                                    <i class="fa-solid fa-calendar-days"></i>
                                    <div class="picker-content">
                                        <div class="picker-name">Ngày Về</div>
                                        <span id="returnDateText">Chọn ngày</span>
                                    </div>
                                </div>

                                <div class="picker-container" id="guestPickerContainer">
                                    <i class="fa-solid fa-user"></i>
                                    <div class="picker-content">
                                        <div class="picker-name">Số Khách</div>
                                        <span id="guestCount">1 khách</span>
                                    </div>
                                </div>
                                <!-- Dropdowns -->
                                <div class="dropdown guest-dropdown"
                                     style="width: 230px; position: absolute; top: 90%; left: 70%;" id="guestDropdown">
                                    <div class="guest-item">
                                        <label>
                                            Người lớn
                                            <br />
                                            <span>(> 12 tuổi)</span>
                                        </label>
                                        <div class="select-quantity">
                                            <button class="counter-btn" id="adultMinus"><i class="fa-solid fa-minus"></i></button>
                                            <span class="counter-value" id="adultCount">1</span>
                                            <button class="counter-btn" id="adultPlus"><i class="fa-solid fa-plus"></i></button>
                                        </div>
                                    </div>
                                    <div class="guest-item">
                                        <label>
                                            Trẻ em
                                            <br />
                                            <span>(2-12 tuổi)</span>
                                        </label>
                                        <div class="select-quantity">
                                            <button class="counter-btn" id="childMinus"><i class="fa-solid fa-minus"></i></button>
                                            <span class="counter-value" id="childCount">0</span>
                                            <button class="counter-btn" id="childPlus"><i class="fa-solid fa-plus"></i></button>
                                        </div>
                                    </div>
                                    <div class="guest-item">
                                        <label>
                                            Em bé
                                            <br />
                                            <span>(&lt;2 tuổi)</span>
                                        </label>
                                        <div class="select-quantity">
                                            <button class="counter-btn" id="infantMinus"><i class="fa-solid fa-minus"></i></button>
                                            <span class="counter-value" id="infantCount">0</span>
                                            <button class="counter-btn" id="infantPlus"><i class="fa-solid fa-plus"></i></button>
                                        </div>
                                    </div>
                                    <hr />
                                    <div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="TravelClass" id="thrifty" value="1" checked>
                                            <label class="form-check-label" for="thrifty">
                                                Tiết kiệm & phổ thông
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="TravelClass" id="universal" value="2">
                                            <label class="form-check-label" for="universal">
                                                Phổ thông linh hoạt
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="TravelClass" id="merchant" value="3">
                                            <label class="form-check-label" for="merchant">
                                                Thương gia
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="content-right">
                            <div class="content-right-1">
                                <div class="btn-check">
                                    <input type="checkbox" id="check">
                                    <label for="check" class="button-check"></label>
                                </div>
                                <div class="ticket-cheap">Tìm vé rẻ nhất</div>
                            </div>
                            <div class="content-right-2">
                                <div class="find-flights"><a href="">Tìm chuyến bay</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="containerIndex2" class="container-index">
                    <div id="container2" class="container">
                        <div class="filter-content-2">
                            <div class="content-left">
                                <div class="left-1">
                                    <div class="location-all">
                                        <div class="location-icon">
                                            <i class="fa-solid fa-location-dot"></i>
                                        </div>
                                        <div class="location-main-text">
                                            <div class="location-main-text1">Địa điểm</div>
                                            <div class="location-main-text2" id="locationText2">
                                                Thành phố, địa danh, khách sạn...
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="left-2">
                                    <div class="picker-container" id="departureDatePicker">
                                        <i class="fa-solid fa-calendar-days"></i>
                                        <div class="picker-content">
                                            <div class="picker-name">Ngày Đi</div>
                                            <span id="departureDateText2">Chọn ngày</span>
                                        </div>
                                    </div>
                                    <div class="picker-container" id="returnDatePicker">
                                        <i class="fa-solid fa-calendar-days"></i>
                                        <div class="picker-content">
                                            <div class="picker-name">Ngày Về</div>
                                            <span id="returnDateText2">Chọn ngày</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="content-right">
                                <div class="find-hotels">
                                    <div class="btn-findHotels">
                                        <a asp-controller="Home" asp-action="HotelFilter">Tìm khách sạn</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Dropdown hotel -main 1 -->
                        <div class="location-dropdown" id="locationDropdown2">
                            <div class="dropdown-title">Địa điểm nổi bật</div>
                            <div class="dropdown-section">
                                @foreach (var cateHotel in listCateHotel.Where(ch => ch.IsOutstanding))
                                {
                                    <div class="dropdown-item" data-location="@cateHotel.Name" data-slug="@cateHotel.Slug">
                                        <img src="@cateHotel.Avatar" alt="@cateHotel.Name" />
                                        <div class="dd-hotel-main">
                                            <span class="dd-name">@cateHotel.Name</span>
                                            <div class="dd-hotel-text">@cateHotel.Hotels.Count khách sạn</div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="dropdown-title">Điểm đến ưa thích</div>
                            <div class="dropdown-section">
                                @foreach (var cateHotel in listCateHotel.Where(ch => !ch.IsOutstanding))
                                {
                                    <div class="dropdown-item dropdown-item-name"
                                         data-location="@cateHotel.Name" data-slug="@cateHotel.Slug">
                                        @cateHotel.Name
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div id="containerIndex3" class="container-index">
                    <div id="container3" class="container">
                        <div class="filter-content-3">
                            <div class="place">
                                <div class="icon"><i class="fa-solid fa-location-dot"></i></div>
                                <div class="place-text">
                                    <div class="place-text1">Địa điểm</div>
                                    <div class="place-text2" id="place-text2" data-slug="">Bạn muốn đi đâu</div>
                                </div>
                            </div>
                            <div class="departure-location">
                                <div class="dl-icon"><i class="fa-solid fa-location-dot"></i></div>
                                <div class="dl-text">
                                    <div class="dl-text1">Khởi hành từ</div>
                                    <div class="dl-text2" id="dl-text2" data-departure="">Vui lòng chọn</div>
                                </div>
                            </div>
                            <div class="find-now">
                                <div class="btn-findNow"><a asp-controller="Home" asp-action="TourFilter">Tìm ngay</a></div>
                            </div>
                        </div>
                        <div class="dropdown-please" id="dropdownPlease">
                            <ul>
                                <li data-value="Hồ Chí Minh">Hồ Chí Minh</li>
                                <li data-value="Hà Nội">Hà Nội</li>
                                <li data-value="Đà Nẵng">Đà Nẵng</li>
                                <li data-value="Nha Trang">Nha Trang</li>
                                <li data-value="Phú Quốc">Phú Quốc</li>
                                <li data-value="Huế">Huế</li>
                                <li data-value="Cần Thơ">Cần Thơ</li>
                                <li data-value="Đà Lạt">Đà Lạt</li>
                                <li data-value="Quy Nhơn">Quy Nhơn</li>
                                <li data-value="Hạ Long">Hạ Long</li>
                                <li data-value="Tây Nguyên">Tây Nguyên</li>
                            </ul>
                        </div>
                        <!-- Dropdown -->
                        <div class="dropdown-container" id="dropdownContainer">

                            <div class="tour-dropdown">
                                <div class="dropdown-title">Địa điểm nổi bật</div>
                                <div class="dropdown-section dropdown-section-1">
                                    @foreach (var cateTour in listCateTour.Where(ct => ct.IsOutstanding).Take(6))
                                    {
                                        <div class="dropdowns-item d-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug" data-slug="@cateTour.Slug">
                                            <img src="@cateTour.Avatar" alt="@cateTour.Name">
                                            <div class="dd-hotel-main">
                                                <span class="dd-name">@cateTour.Name</span>
                                                <div class="dd-hotel-text">@cateTour.Tours.Count tour</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="travel-all">
                                <!--Du lịch trong nước và nước ngoài -->
                                <div class="dropdown-section-2">
                                    <div class="dropdown-items toggle-section" onclick="toggleSubMenu('domestic')">
                                        <i class="fa fa-chevron-right arrow-icon" id="arrow-international"></i>Du lịch trong nước
                                    </div>
                                    <div class="sub-options" id="domestic">
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('north')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-north"></i> Miền Bắc
                                        </div>
                                        <div class="sub-options-inner" id="north">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "mien-bac")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('central')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-central"></i> Miền Trung
                                        </div>
                                        <div class="sub-options-inner" id="central">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "mien-trung")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('south')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-south"></i> Miền Nam
                                        </div>
                                        <div class="sub-options-inner" id="south">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "mien-nam")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-section-2">
                                    <div class="dropdown-items toggle-section" onclick="toggleSubMenu('international')">
                                        <i class="fa fa-chevron-right arrow-icon" id="arrow-international"></i> Du lịch nước ngoài
                                    </div>
                                    <div class="sub-options" id="international">
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('southeast-asia')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-southeast-asia"></i> Đông Nam Á
                                        </div>
                                        <div class="sub-options-inner" id="southeast-asia">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "dong-nam-a")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('asia')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-asia"></i> Châu Á
                                        </div>
                                        <div class="sub-options-inner" id="asia">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "chau-a")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('europe')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-europe"></i> Châu Âu
                                        </div>
                                        <div class="sub-options-inner" id="europe">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "chau-au")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                        <div class="dropdown-items toggle-submenu" onclick="toggleSubMenu('australia')">
                                            <i class="fa fa-chevron-right arrow-icon" id="arrow-australia"></i> Châu Úc
                                        </div>
                                        <div class="sub-options-inner" id="australia">
                                            @foreach (var cateTour in listCateTour.FirstOrDefault(ct => ct.Slug == "chau-uc")?.CateTourChildren!)
                                            {
                                                <div class="dropdowns-item" data-location="@cateTour.Name" data-slug="@cateTour.Slug">@cateTour.Name</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Brand-->
    <div class="brand-index">
        <div class="list-brand">
            <div class="journey">
