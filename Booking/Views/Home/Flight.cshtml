    <script>
        $(function () {
            const Toast = window.globalVariable;

            $(".find-flights > a").click(function (event) {
                event.preventDefault();
                var departure = $("#swaptext1").attr("data-code");
                var destination = $("#swaptext2").attr("data-code");
                var departureDate = $("#departureDateText").attr("data-date");
                var returnDate = $("#returnDateText").attr("data-date") ?? "";
                var numberAdult = $("#adultCount").text();
                var numberChildren = $("#childCount").text();
                var numberInfant = $("#infantCount").text();
                var travelClass = $(".form-check .form-check-input:checked").val();

                if (departure == undefined || destination == undefined || departureDate == undefined) {
                    Swal.fire({
                        title: "Thiếu thông tin!",
                        text: "Vui lòng chọn điểm đi, điểm đến, ngày đi",
                        icon: "warning",
                    });

                    return;
                }

                if (departure == destination){
                    Swal.fire({
                        title: "Sai thông tin!",
                        text: "Điểm đến và điểm đi không thể cùng một nơi",
                        icon: "warning",
                    });

                    return;
                }

                var url = "@Url.Action("FlightSearch")" + 
                    `?From=${departure}&To=${destination}&DepartDate=${departureDate}&ReturnDate=${returnDate}&ADT=${numberAdult}&CHD=${numberChildren}&INF=${numberInfant}&TravelClass=${travelClass}`;

                console.log(url);

                window.location.href = url;
            });
        });
    </script>
