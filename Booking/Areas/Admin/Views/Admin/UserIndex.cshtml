@model IEnumerable<User>

@{
    ViewData["Title"] = "Users";
    var count = 0;
}

<div class="content pe-3">
    <div class="top-content mb-3">
        <div class="float-start d-flex form-group">
            @* <div class="me-2 position-relative">
                <input type="text"
                       class="form-control"
                       placeholder="Tìm theo email" />
                <button>
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div> *@
        </div>
        <div class="float-end mb-3">
            <button class="btn btn-outline-danger me-2 btn-remove">
                Xóa
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#add-user">
                + Thêm tài khoản
            </button>
        </div>
    </div>
    <div class="main-content">
        <table class="table table-hover text-center users">
            <thead>
                <tr>
                    <th scope="col">
                        <input class="form-check-input"
                               type="checkbox"
                               id="checkboxNoLabel" />
                    </th>
                    <th>STT</th>
                    <th scope="col">Tài khoản</th>
                    <th scope="col">Email</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="checkboxNoLabel" />
                        </th>
                        <th>@(++count)</th>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>Hoạt động</td>
                        <td>
                            <div class="btn-group">
                                <button type="button"
                                        class="btn"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fa-solid fa-ellipsis-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <button class="dropdown-item"
                                                type="button"
                                                data-bs-toggle="modal"
                                                data-bs-target="#autho-user"
                                                data-id="@user.Id">
                                            Phân quyền
                                        </button>
                                        <button class="dropdown-item"
                                                type="button"
                                                data-bs-toggle="modal"
                                                data-bs-target="#update-user">
                                            Sửa
                                        </button>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)" data-id="@user.Id" class="dropdown-item delete-user">Xóa</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal add-->
    <div class="modal fade"
         id="add-user"
         tabindex="-1"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-dark fs-3">Thêm tài khoản</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="#" class="row">
                        <div class="form-group col-md-12 mb-3">
                            <label>Họ tên: <span class="text-danger">*</span></label>
                            <input type="text" name="UserName"
                                   class="form-control fs-7"
                                   placeholder="Họ tên..." />
                        </div>
                        <div class="form-group col-md-12 mb-3">
                            <label>Email: <span class="text-danger">*</span></label>
                            <input type="text" name="Email"
                                   class="form-control fs-7"
                                   placeholder="Email..." />
                        </div>
                        <div class="form-group col-md-12 mb-3">
                            <label>Điện thoại: <span class="text-danger">*</span></label>
                            <input type="text" name="PhoneNumber"
                                   class="form-control fs-7"
                                   placeholder="Điện thoại..." />
                        </div>
                        <div class="form-group col-md-12 mb-3">
                            <label>Mật khẩu: <span class="text-danger">*</span></label>
                            <input type="password"
                                   class="form-control fs-7"
                                   placeholder="Mật khẩu..." />
                        </div>
                        <div class="form-group col-md-12 mb-3">
                            <label>Nhóm quyền: <span class="text-danger">*</span></label>
                            <select class="form-control" name="RoleName">
                                <option value="">--Không có--</option>
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Name">@role.Name</option>
                                }
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-light"
                            data-bs-dismiss="modal">
                        Hủy
                    </button>
                    <button type="button" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade"
         id="update-user"
         tabindex="-1"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-dark fs-3">Sửa tài khoản</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="#" class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label>Họ: <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control fs-7"
                                   placeholder="Họ..." />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label>Tên: <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control fs-7"
                                   placeholder="Tên..." />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label>Email: <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control fs-7"
                                   placeholder="Email..." />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label>Điện thoại: <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control fs-7"
                                   placeholder="Điện thoại..." />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label>Ngày sinh: <span class="text-danger">*</span></label>
                            <input type="date" class="form-control fs-7" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label>Giới tính: <span class="text-danger">*</span></label>
                            <select class="form-control">
                                <option value="0">Nữ</option>
                                <option value="1">Nam</option>
                                <option value="2">Khác</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label>Mật khẩu: <span class="text-danger">*</span></label>
                            <input type="password"
                                   class="form-control fs-7"
                                   placeholder="Mật khẩu..." />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-light"
                            data-bs-dismiss="modal">
                        Hủy
                    </button>
                    <button type="button" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal authoz-->
    <div class="modal fade"
         id="autho-user"
         tabindex="-1"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-dark fs-3">Phân quyền tài khoản</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="#" class="row">
                        <div class="form-group col-md-12 mb-3">
                            <label>Role: <span class="text-danger">*</span></label>
                            <select class="form-control" name="roleName">
                                <option value="">--Không có--</option>
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Name">@role.Name</option>
                                }
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-light"
                            data-bs-dismiss="modal">
                        Hủy
                    </button>
                    <button type="button" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_LoadingPartial")

@section Scripts {
    <script>
        $(function () {
            const Toast = window.globalVariable;
            // Create user


            $(".delete-user").click(function () {
                Swal.fire({
                    title: "Bạn chắc chứ?",
                    text: "Thao tác này sẽ không được hoàn lại!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Đồng ý",
                    cancelButtonText: "Không"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("UserDelete", "Admin")',
                            type: 'DELETE',
                            data: { id: $(this).data('id') },
                            beforeSend: function () {
                                $("#loadingModal").show();
                            },
                            success: function (res) {
                                if (!res.success) {
                                    Toast.fire({
                                        icon: `error`,
                                        text: res.message
                                    });
                                    return;
                                }

                                window.location.href = "@Url.Action("UserIndex", "Admin")";
                            },
                            complete: function () {
                                $("#loadingModal").hide();
                            },
                            error: function (error) {
                                Toast.fire({
                                    icon: `error`,
                                    text: `Có lỗi xảy ra`
                                });

                                console.log(error);
                            }
                        });
                    }
                });
            });
        });
    </script>
}