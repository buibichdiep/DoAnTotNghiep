@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role";
    var count = 0;
}

<div class="content pe-3">
    <div class="top-content mb-3">
        <div class="float-start d-flex form-group">
            @* <div class="me-2 position-relative">
                <input type="text"
                       class="form-control"
                       placeholder="Tìm theo tên" />
                <button>
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div> *@
        </div>
        <div class="float-end mb-3">
            <button class="btn btn-outline-danger me-2 btn-remove">
                Xóa
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#add-role">
                + Thêm role
            </button>
        </div>
    </div>
    <div class="main-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        <input class="form-check-input"
                               type="checkbox"
                               id="checkboxNoLabel" />
                    </th>
                    <th>STT</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="checkboxNoLabel" />
                        </th>
                        <th>@(++count)</th>
                        <td class="role-name">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button"
                                        class="btn"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fa-solid fa-ellipsis-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <button class="dropdown-item role-update"
                                                type="button"
                                                data-bs-toggle="modal"
                                                data-bs-target="#update-role"
                                                data-id="@item.Id">
                                            Sửa
                                        </button>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)" data-id="@item.Id" class="dropdown-item delete-role">Xóa</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* Model add role *@
<div class="modal fade"
     id="add-role"
     tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark fs-3">Thêm role</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post" class="row form-role">
                    <div class="form-group col-md-12 mb-3">
                        <label>Tên role: <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control fs-7"
                               name="roleName"
                               placeholder="Tên role..." />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-light"
                        data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary">Thêm</button>
            </div>
        </div>
    </div>
</div>

@* Model update role *@
<div class="modal fade"
     id="update-role"
     tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark fs-3">Sửa role</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="#" class="row form-role">
                    <div class="form-group col-md-12 mb-3">
                        <input type="hidden" name="id"
                               class="form-control fs-7"/>
                    </div>
                    <div class="form-group col-md-12 mb-3">
                        <label>Tên role: <span class="text-danger">*</span></label>
                        <input type="text" name="role-name"
                               class="form-control fs-7"
                               placeholder="Tên role..." />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-light"
                        data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary">Sửa</button>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_LoadingPartial")

@section Scripts {
    <script>
        $(function () {
            const Toast = window.globalVariable;

            // Add role
            $(".modal#add-role .modal-footer button.btn-primary").click(function () {
                var roleName = $("#add-role .form-role input").val();

                if ($.trim(roleName) === '') {
                    Toast.fire({
                        icon: 'error',
                        text: 'Không được để trống tên role'
                    });

                    return;
                }

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Create", "Role")",
                    data: { roleName: roleName },
                    beforeSend: function () {
                        $("#loadingModal").show();
                    },
                    success: function (res) {
                        if (!res.success) {
                            Toast.fire({
                                icon: `error`,
                                text: res.message
                            });

                            return;
                        }

                        window.location.href = "@Url.Action("Index", "Role")";
                    },
                    complete: function () {
                        $("#loadingModal").hide();
                    },
                    error: function (error) {
                        Toast.fire({
                            icon: `error`,
                            text: `Có lỗi xảy ra`
                        });

                        console.log(error);
                    }
                });
            });

            // Update role
            var roleName;
            var idRole;
            $(".role-update").click(function () {
                roleName = $(this).closest("tr").find(".role-name").text().trim();
                idRole = $(this).data('id');

                var formUpdate = $('.modal#update-role .form-role');
                formUpdate.find("input[name=id]").val(idRole);
                formUpdate.find("input[name=role-name]").val(roleName);
            });

            $(".modal#update-role .modal-footer button.btn-primary").click(function () {
                var idRoleInput = $("#update-role .form-role input[name=id]").val();
                var roleNameInput = $("#update-role .form-role input[name=role-name]").val();


                if ($.trim(roleNameInput) === '') {
                    Toast.fire({
                        icon: 'error',
                        text: 'Không được để trống tên role'
                    });

                    return;
                }

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Update")',
                    data: { id: idRoleInput, roleName: roleNameInput },
                    beforeSend: function () {
                        $('#loadingModal').show();
                    },
                    success: function(res) {
                        if(!res.success) {
                            Toast.fire({
                                icon: 'error',
                                text: res.message
                            });
                            return;
                        }

                        window.location.href = "@Url.Action("Index", "Role")";
                    },
                    complete: function(){
                        $('#loadingModal').hide();
                    },
                    error: function (error) {
                        Toast.fire({
                            icon: 'error',
                            text: 'Có lỗi xảy ra'
                        });

                        console.log(error);
                    }
                });
            });


            // Delete role
            $(".delete-role").click(function () {
                Swal.fire({
                    title: "Bạn chắc chứ?",
                    text: "Thao tác này sẽ không được hoàn lại!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Đồng ý",
                    cancelButtonText: "Không"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Delete", "Role")',
                            type: 'DELETE',
                            data: { id: $(this).data('id') },
                            beforeSend: function () {
                                $("#loadingModal").show();
                            },
                            success: function (res) {
                                if (!res.success) {
                                    Toast.fire({
                                        icon: `error`,
                                        text: res.message
                                    });
                                    return;
                                }

                                window.location.href = "@Url.Action("Index", "Role")";
                            },
                            complete: function () {
                                $("#loadingModal").hide();
                            },
                            error: function (error) {
                                Toast.fire({
                                    icon: `error`,
                                    text: `Có lỗi xảy ra`
                                });

                                console.log(error);
                            }
                        });
                    }
                });
            });
        });
    </script>
}