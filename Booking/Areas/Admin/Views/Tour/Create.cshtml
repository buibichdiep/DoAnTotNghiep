@model TourDTO

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <h3>Create Tour</h3>
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills" role="tablist">
                <li class="nav-item" role="presentation">
                    <a href="#info-tab"
                       class="nav-link active"
                       data-bs-toggle="tab"
                       role="tab"
                       aria-selected="true">Thông tin chung</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a href="#image-tab"
                       class="nav-link"
                       data-bs-toggle="tab"
                       role="tab"
                       aria-selected="false">Hình ảnh</a>
                </li>

                <li class="nav-item" role="presentation">
                    <a href="#travel-schedule-tab"
                       class="nav-link"
                       data-bs-toggle="tab"
                       role="tab"
                       aria-selected="false">Lịch trình</a>
                </li>
            </ul>
        </div>
        <div class="card-body tab-content">
            <div class="tab-pane active" id="info-tab" role="tabpanel">
                <form asp-action="Create" method="post" id="formHotel">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdCateTour" class="control-label"></label>
                        <select asp-for="IdCateTour" class="form-control" asp-items="ViewBag.CateTour">
                            <option value="">-- Không có --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TourName" class="control-label"></label>
                        <input asp-for="TourName" class="form-control" />
                        <span asp-validation-for="TourName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Images" type="hidden" class="form-control" id="imageInput" />
                    </div>
                    <div class="form-group">
                        <input asp-for="AvatarId" type="hidden" class="form-control" id="avatarInput" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration" class="control-label"></label>
                        <select asp-for="Duration" class="form-control">
                            <option value="1N0D-Đi trong ngày">Đi trong ngày</option>
                            <option value="2N1D-2 ngày 1 đêm">2 ngày 1 đêm</option>
                            <option value="3N2D-3 ngày 2 đêm">3 ngày 2 đêm</option>
                            <option value="4N3D-4 ngày 3 đêm">4 ngày 3 đêm</option>
                            <option value="5N4D-5 ngày 4 đêm">5 ngày 4 đêm</option>
                            <option value="6N5D-6 ngày 5 đêm">6 ngày 5 đêm</option>
                            <option value="7N6D-7 ngày 6 đêm">7 ngày 6 đêm</option>
                        </select>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Departure" class="control-label"></label>
                        <input asp-for="Departure" class="form-control" />
                        <span asp-validation-for="Departure" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Destination" class="control-label"></label>
                        <input asp-for="Destination" class="form-control" />
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sightseeing" class="control-label"></label>
                        <input asp-for="Sightseeing" class="form-control" />
                        <span asp-validation-for="Sightseeing" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Vehicle" class="control-label"></label>
                        <input asp-for="Vehicle" class="form-control" />
                        <span asp-validation-for="Vehicle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tag" class="control-label"></label>
                        <input asp-for="Tag" class="form-control" />
                        <span asp-validation-for="Tag" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount" class="control-label"></label>
                        <input asp-for="Discount" type="number" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PercentDeposit" class="control-label"></label>
                        <select asp-for="PercentDeposit" class="form-control">
                            <option value="0">Không cọc</option>
                            <option value="20">20%</option>
                            <option value="50">50%</option>
                        </select>
                        <span asp-validation-for="PercentDeposit" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Overview" class="control-label"></label>
                        <textarea asp-for="Overview" class="form-control"></textarea>
                        <span asp-validation-for="Overview" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServiceInclude" class="control-label"></label>
                        <textarea asp-for="ServiceInclude" class="form-control"></textarea>
                        <span asp-validation-for="ServiceInclude" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServiceNotInclude" class="control-label"></label>
                        <textarea asp-for="ServiceNotInclude" class="form-control"></textarea>
                        <span asp-validation-for="ServiceNotInclude" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="TravelSchedule" type="hidden" class="form-control" id="travel_schedule" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="tab-pane" id="image-tab" role="tabpanel">
                <div>
                    <button type="button" class="btn btn-success float-end mb-3" id="uploadButton">
                        Tải ảnh
                    </button>
                    <input type="file" id="fileInput" multiple name="file" style="display:none;" />
                </div>
                <table class="table table-hover align-middle text-center table-create_product">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Ảnh</th>
                            <th>Ảnh đại diện</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="imageTableBody">
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="travel-schedule-tab" role="tabpanel">
                <form id="form-schedule">
                    <div class="form-group">
                        <label>Tiêu đề lịch trình</label>
                        <input type="text" name="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="Images" value="" />
                    </div>
                    <div class="form-group">
                        <label>Nội dung</label>
                        <textarea class="form-control" id="travel-schedule" name="Content"></textarea>
                    </div>
                    <button type="button" class="btn btn-success">Thêm</button>
                </form>
                <hr />
                <ul id="show-schedule"></ul>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@await Html.PartialAsync("_LoadingPartial")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_HandleImagePartial");
    }

    <script>
        $(document).ready(function () {
            var Toast = window.globalVariable;

            new FroalaEditor('#travel-schedule', {
                // pluginsEnabled: ['image', 'video', 'table'],  // Bật các plugins bạn muốn sử dụng
                // toolbarButtons: ['bold', 'italic', 'underline', 'insertImage', 'insertVideo', 'insertTable'],
                imageUploadURL: '@Url.Action("FroalaUpload")',  // URL để tải lên hình ảnh (nếu cần)
                videoUploadURL: '@Url.Action("FroalaUpload")',  // URL để tải lên video (nếu cần)
                heightMin: 200,
                events: {
                    'image.uploaded': function (res) {
                        var jsonData = JSON.parse(res);
                        if (!jsonData.success) {
                            Toast.fire({
                                icon: 'error',
                                text: jsonData.message
                            });

                            return;
                        }

                        var inputImage = $("#form-schedule input[name=Images]")

                        inputImage.val() == ''
                            ? inputImage.val(jsonData.id)
                            : inputImage.val(inputImage.val() + ';' + jsonData.id);
                    }
                }
            });

            // Add travel schedule
            $("#form-schedule button.btn").click(function () {
                var formData = $("#form-schedule").serialize();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("CreateTravelSchedule")",
                    data: formData,
                    beforeSend: function () {
                        // Hiển thị modal trước khi gọi AJAX
                        $("#loadingModal").show();
                    },
                    success: function (res) {
                        if (!res.success) {
                            Toast.fire({
                                icon: 'error',
                                text: res.message
                            });

                            return;
                        }

                        $("#form-schedule input[name=Title]").val('');
                        FroalaEditor('#travel-schedule').html.set('');

                        var li = '<li class="d-flex justify-content-between" value=' + res.data.id + '>' +
                            '<span>' + res.data.title + '</span><span class="btn btn-link">Xóa</span></li>'

                        $("#show-schedule").append(li);
                    },
                    complete: function () {
                        // Ẩn modal khi hoàn thành
                        $("#loadingModal").hide();
                    },
                    error: function (error) {
                        Toast.fire({
                            icon: 'error',
                            text: 'Có lỗi xảy ra'
                        });
                        console.log(error);
                    }
                });
            });

            // Delete travel schedule
            $('#show-schedule').on('click', 'li span.btn', function (item) {
                Swal.fire({
                    title: "Bạn chắc chứ?",
                    text: "Thao tác này sẽ không được hoàn lại!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Đồng ý",
                    cancelButtonText: "Không"
                }).then((result) => {
                    if (result.isConfirmed) {
                        var id = $(this).closest('li').val();

                        $.ajax({
                            type: "DELETE",
                            url: "@Url.Action("DeleteTravelSchedule")",
                            data: { id: id },
                            beforeSend: function () {
                                // Hiển thị modal trước khi gọi AJAX
                                $("#loadingModal").show();
                            },
                            success: function (res) {
                                if (!res.success) {
                                    Toast.fire({
                                        icon: 'error',
                                        text: res.message
                                    });

                                    return;
                                }

                                $(item.currentTarget).closest('li').fadeOut(300, function () {
                                    $(this).remove(); // Xóa phần tử khỏi DOM sau khi hiệu ứng ẩn hoàn thành
                                });
                            },
                            complete: function () {
                                // Ẩn modal khi hoàn thành
                                $("#loadingModal").hide();
                            },
                            error: function (error) {
                                Toast.fire({
                                    icon: 'error',
                                    text: 'Có lỗi xảy ra'
                                });
                                console.log(error);
                            }
                        });
                    }
                });
            });
        });
    </script>
}
